PatchScript: <<
perl -pi -e 's,/usr/bin/expr,/bin/expr,g' init-functions
perl -pi -e 's,/usr/bin/tput,%p/bin/tput,g' init-functions
perl -pi -e 's,/var/run,%p/var/run,g' init-functions
perl -pi -e 's,/lib/lsb/init-functions.d,%p/lib/lsb/init-functions.d,g' init-functions

perl -pi -e 's,/bin/echo,echo,g' init-functions init-functions.d/*
perl -pi -e 's,echo,%p/bin/gecho,g' init-functions init-functions.d/*

sed -i '30,63d;125,178d' init-functions
<<
