PatchScript: <<
	#!/bin/sh -ev
	let osmajor=`uname -r | cut -f 1 -d .`
	let osminor=`uname -r | cut -f 2 -d .`
	perlversion=%type_raw[perl]
	if [ $osmajor -gt 18 -o \( $osmajor -eq 18 -a $osminor -ge 6 \) ]; then
		if [ $perlversion = "5.18.4" ]; then
			perl -pi -e 's,(my \$Perl = ).*$,\1"perl$perlversion";,' t/Legacy/exit.t
		fi
	elif [ $osmajor -ge 14 ]; then
		if [ $perlversion = "5.18.2" ]; then
			perl -pi -e 's,(my \$Perl = ).*$,\1"perl$perlversion";,' t/Legacy/exit.t
		fi
	else
		if [ $perlversion = "5.16.2" ]; then
			perl -pi -e 's,(my \$Perl = ).*$,\1"perl$perlversion";,' t/Legacy/exit.t
		fi
	fi
<<

