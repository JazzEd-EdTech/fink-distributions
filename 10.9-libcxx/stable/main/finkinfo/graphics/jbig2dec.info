	Depends: libpng16-shlibs
	
	Files: lib/*.*.dylib
	Shlibs: <<
		%p/lib/lib%N.0.dylib 1.0.0 %n (>= 0.9-1)
	<<
	
	DocFiles: CHANGES COPYING LICENSE README
<<

SplitOff2: <<
	Package: lib%N-dev
	
	Depends: lib%N-shlibs (= %v-%r)
	
	Files: include lib
	
	DocFiles: CHANGES COPYING LICENSE README
	
