CompileScript: <<
	#!/bin/sh -ev
	cp ../waf-1.8.12 %b/waf
	chmod 755 waf
	./waf configure %c
	./waf build -v $MAKEFLAGS
	fink-package-precedence --depfile-ext='\.d' .
	TOOLS/osxbundle.py -s build/mpv
<<
InstallScript: <<
	DESTDIR=%d ./waf install
<<
