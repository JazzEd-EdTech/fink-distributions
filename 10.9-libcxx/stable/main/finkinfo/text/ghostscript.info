	autoconf2.6,
	fink (>= 0.32),
	fink-buildenv-modules (>= 0.1.3-1),
	fink-package-precedence,
	fontconfig2-dev (>= 2.10.0-1),
	freetype219 (>= 2.10.2-1),
	libiconv-dev,
	libidn,
