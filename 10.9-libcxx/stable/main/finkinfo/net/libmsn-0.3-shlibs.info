CompileScript: <<
#!/bin/sh -ev
	mkdir build
	pushd build
		cmake \
			-DCMAKE_INSTALL_PREFIX="%p" \
			-DCMAKE_C_FLAGS:STRING=-MD \
			-DCMAKE_CXX_FLAGS:STRING=-MD \
			..
		make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libmsn-0.3 .
<<
InstallScript: <<
#!/bin/sh -ev
	pushd build
		make -j1 install/fast DESTDIR="%d"
	popd
	pushd %i
		rm -rf bin
		rm -rf include
		rm lib/libmsn.dylib
		rm -rf lib/pkgconfig
	popd
